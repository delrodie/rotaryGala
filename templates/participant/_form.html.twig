{{ form_start(form) }}
    <div class="row form-group">
        <div class="col-md-12 offset-0 mt-3">
            <div class="row">
                <div class="col-md-3 mt-3">{{ form_row(form.nom) }}</div>
                <div class="col-md-5 mt-3">{{ form_row(form.prenoms) }}</div>
                <div class="col-md-4 mt-3">{{ form_row(form.contact) }}</div>
            </div>
            <h6 class="mt-5">Tickets</h6>
            <ul class="tickets" data-prototype="{{ form_widget(form.tickets.vars.prototype)|e('html_attr') }}">
                {% for ticket in form.tickets %}
                    <li>
                        <div class="row">
                            <div class="col-sm-6">{{ form_row(ticket.type,{'attr':{'class':'form-control'}}) }}</div>
                            <div class="col-sm-6">{{ form_row(ticket.ticket,{'attr':{'class':'form-control'}}) }}</div>
                        </div>
                    </li>
                {% endfor %}
                <div class="text-right mt-3">
                </div>
            </ul>
        </div>
    </div>

    {{ form_widget(form) }}
    <div class="text-right mt-5">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>

{{ form_end(form) }}
