{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} Tableau de bord{% endblock %}

{% block body %}
    <div class="row row-sm mg-t-15 mg-sm-t-20">
        <div class="col-xl-3 offset-xl-9 mg-t-15 mg-sm-t-20">
            <div class="card card-hover card-calendar-one">
                <div id="datepicker1"></div>
            </div><!-- card -->
        </div><!-- col -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('backoffice/lib/jquery.flot/jquery.flot.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/lib/jquery.flot/jquery.flot.stack.js')) }}"></script>
    <script src="{{ absolute_url(asset('backoffice/lib/jquery.flot/jquery.flot.resize.js')) }}"></script>
    <script>
        $(function(){

            'use strict'

            // card-calendar-one widget
            $('#datepicker1').datepicker({
                showOtherMonths: true
            });

        })
    </script>
{% endblock %}