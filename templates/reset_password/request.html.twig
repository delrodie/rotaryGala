{% extends 'security_layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <div class="signin-panel">

        <div class="signin-sidebar">
            <div class="signin-sidebar-body">
                <a href="{{ path('app_home') }}" class="sidebar-logo mg-b-40"><span>Rotary Abidjan Bietry</span></a>
                <h4 class="signin-title">{% trans %}Reset your password{% endtrans %}</h4>

                {% for flashError in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        {% trans %}Enter your email address and we we will send you a link to reset your password. {% endtrans %}
                    </small>
                </div>

                <button class="btn btn-primary">{% trans %}Send password reset email{% endtrans %}</button>
                {{ form_end(requestForm) }}

            </div>
        </div>
    </div>
{% endblock %}