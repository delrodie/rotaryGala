{{ form_start(form) }}
    <div class="row form-group">
        <div class="col-sm-6">{{ form_row(form.type) }}</div>
        <div class="col-sm-6">{{ form_row(form.ticket) }}</div>
    </div>
<div class="row form-group">
    <div class="col-sm-6">
        <label for="">Invit√©</label>
        <input type="text" class="form-control" value="{{ participer.participant.nom }} {{ participer.participant.prenoms }}" readonly>
    </div>
    <div class="col-sm-6">
        <label for="">Contact</label>
        <input type="text" class="form-control" value="{{ participer.participant.contact }}" readonly>
    </div>
</div>
<div class="row form-group">
        <div class="col-sm-6">{{ form_row(form.montant) }}</div>
        <div class="col-sm-6">{{ form_row(form.place) }}</div>
    </div>
{{ form_widget(form) }}
